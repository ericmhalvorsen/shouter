<%= form_for @shout, url: text_shouts_path do |form| %>
  <%= form.fields_for :content do |body| %>
    <%= body.text_field :body, placeholder: "Shout here" %>
  <% end %>
  <%= form.check_box :public %>
  <%= form.submit "Shout!" %>
<% end %>

<%= form_for @shout, url: photo_shouts_path do |form| %>
  <%= form.fields_for :content do |file| %>
    <%= file.file_field :image %>
  <% end %>
  <%= form.check_box :public %>
  <%= form.submit "Shout!" %>
<% end %>

<%= render @timeline%>
