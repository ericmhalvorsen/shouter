<!DOCTYPE html>
<html>
<head>
  <title>Shouter</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if signed_in? %>
    <div class="login-info"><%= link_to "Sign out", sign_out_path, method: :delete %></div>
    <h1 class="current-user">Welcome <%= current_user.email %></h1>
  <% else %>
    <div class="login-info"><%= link_to "Sign in", sign_in_path %>
    - <%= link_to "Sign up", sign_up_path %></div>
  <% end %>
  
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
  <% end %>
  
  <%= yield %>

</body>
</html>
